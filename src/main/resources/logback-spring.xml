<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

	<!-- Disable Logback internal status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/Users/manuel/workspace/amhs/temp/application.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/Users/manuel/workspace/amhs/temp/application.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss} %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Reduce Spring logs -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
	
</configuration>